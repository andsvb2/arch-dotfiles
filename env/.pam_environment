# Locale
LANG            DEFAULT=pt_BR.UTF-8
LANGUAGE				DEFAULT=${LANG}
LC_CTYPE				DEFAULT=${LANG}
LC_NUMERIC			DEFAULT=${LANG}
LC_TIME					DEFAULT=en_DK.UTF-8
LC_COLLATE			DEFAULT=C
LC_MONETARY			DEFAULT=${LANG}
LC_MESSAGES			DEFAULT=${LANG}
LC_PAPER				DEFAULT=${LANG}
LC_NAME					DEFAULT=${LANG}
LC_ADDRESS			DEFAULT=${LANG}
LC_TELEPHONE		DEFAULT=${LANG}
LC_MEASUREMENT	DEFAULT=${LANG}
LC_IDENTIFICATION	DEFAULT=${LANG}
# LC_ALL          DEFAULT=${LANG}

# Configurando caminhos
PATH           DEFAULT=${PATH}:/usr/local/texlive/2020/bin/x86_64-linux
MANPATH        DEFAULT=${MANPATH}:/usr/local/texlive/2020/texmf-dist/doc/man
INFOPATH       DEFAULT=${INFOPATH}:/usr/local/texlive/2020/texmf-dist/doc/info